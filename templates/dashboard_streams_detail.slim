                  input#field5_max_value.form-control value="" type="text" / 
            .row
              .form-group
                button.btn.btn-primary#btn-update.pull-left style="margin-right:15px;" type="button" Update

        .tab-pane.active#red
          .btn-group
            button.btn.btn-primary#day data-style="expand-left"
              span 1 Day
            button.btn.btn-primary#week data-style="expand-left"
              span 7 Day
            button.btn.btn-primary#month data-style="expand-left"
              span 30 Day

          #streams.col-md-12
          input#streamID name="streamID" type="hidden" value="#{@stream_meta[:id]}" 
