                  label for="field2_uom" UoM
                  input#field2_uom.form-control value="#{@field_data[1][:uom]}" type="text" /
                .form-group.col-md-2
                  label for="field2_min_value" Alias
                  input#field2_alias.form-control value="#{@field_data[1][:alias]}" type="text" /
              .row
                .form-group.col-md-offset-3.col-md-2
