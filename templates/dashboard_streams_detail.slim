section.home-section.bg-white
  .container
    .row
      ol.breadcrumb.pull-left
        li
          a href="/dashboard"  Dashboard
        li.active #{@stream_meta[:name]}
    .row
      .col-md-offset-2.col-md-8
        .section-heading
          h2 #{@stream_meta[:name]}
          h4 #{@stream_meta[:description]}
          
    .container style="text-align:left;"
    #content
      ul#tabs.nav.nav-tabs data-tabs="tabs"
        li.active
          a data-toggle="tab" href="#red" Stream
        li
          a data-toggle="tab" href="#orange"  Settings

      #tab-content.tab-content 
        .tab-pane#orange
          form role="form" 
            .form-group
              label for="stream_name"  Name:
              input#stream_name.form-control value="#{@stream_meta[:name]}" type="text" /
            .form-group
              label for="stream_desc"  Description:
              input#stream_desc.form-control value="#{@stream_meta[:description]}" type="text" /
            .checkbox
              label
                input type="checkbox" /
                | Make this Stream Private?
          .row
            .form-group
              button.btn.btn-primary#btn-update.pull-left style="margin-right:15px;" type="button" Update
              button.btn.btn-danger#btn-purge.pull-right style="margin-right:15px;" type="button" Purge Data
              button.btn.btn-warning#btn-delete.pull-right style="margin-right:16px;" type="button" Remove Stream
          .row
            h3 Fields
            form role="form"
              .row
                .form-group.col-md-offset-3.col-md-2
                  label for="field1_name" Field Name 
                  input#field1_name.form-control value="" type="text" /
                .form-group.col-md-1
                  label for="field1_uom" UoM
                  input#field1_uom.form-control value="" type="text" / 
                .form-group.col-md-1
                  label for="field1_min_value" Min value
                  input#field1_min_value.form-control value="" type="text" /
                .form-group.col-md-1
                  label for="field1_max_value" Max value
                  input#field1_max_value.form-control value="" type="text" /
              .row  
                .form-group.col-md-offset-3.col-md-2
                  input#field2_name.form-control value="" type="text" /
                .form-group.col-md-1
                  input#field2_uom.form-control value="" type="text" /
                .form-group.col-md-1
                  input#field2_min_value.form-control value="" type="text" /
                .form-group.col-md-1
                  input#field2_max_value.form-control value="" type="text" /
              .row
                .form-group.col-md-offset-3.col-md-2
                  input#field3_name.form-control value="" type="text" /
                .form-group.col-md-1
                  input#field3_uom.form-control value="" type="text" /
                .form-group.col-md-1
                  input#field3_min_value.form-control value="" type="text" /
                .form-group.col-md-1
                  input#field3_max_value.form-control value="" type="text" /
              .row
                .form-group.col-md-offset-3.col-md-2
                  input#field4_name.form-control value="" type="text" /
                .form-group.col-md-1
                  input#field4_uom.form-control value="" type="text" /
                .form-group.col-md-1
                  input#field4_min_value.form-control value="" type="text" /
                .form-group.col-md-1
                  input#field4_max_value.form-control value="" type="text" / 
              .row
                .form-group.col-md-offset-3.col-md-2
                  input#field5_name.form-control value="" type="text" /
                .form-group.col-md-1
                  input#field5_uom.form-control value="" type="text" /
                .form-group.col-md-1
                  input#field5_min_value.form-control value="" type="text" /
